<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2D2BD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="6dp"
        android:backgroundTintMode="src_over"
        android:clipToOutline="true"
        android:layout_margin="12dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF">

        <!-- Header with Back + Title + Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                android:textColor="#C71585"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🧘‍♀️ Mindful Stretching"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#C71585"/>

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout ⍈"
                android:textColor="#C71585"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Center Icon + Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧘‍♂️"
                    android:textSize="42sp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/stretchingInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrist and finger stretches – Stretch those typing muscles (3s)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#C71585"
                android:gravity="center"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get ready to stretch with 15 other students"
                android:textSize="12sp"
                android:textColor="#8B5C79"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Today's Routine -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFDDEE"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Routine (10 minutes)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#8B1C62"
                android:layout_marginBottom="8dp"/>

            <!-- Routine Items -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Neck rolls and shoulder shrugs (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Seated spinal twist (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Wrist and finger stretches (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Standing forward fold (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Deep breathing and relaxation (2 min)"
                android:textSize="12sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Waiting Room -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEAF5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🟢 Waiting room (16 joined)"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#8B1C62"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session will begin automatically when the timer reaches zero"
                android:textSize="11sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- Ready Button -->
        <Button
            android:id="@+id/readyStretching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm Ready! 🙋‍♀️"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C71585"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>
