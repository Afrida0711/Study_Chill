<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2D2BD"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ§ðŸ“š"
                android:textSize="48sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Study Chill"
                android:textColor="#9D174D"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your study sanctuary"
                android:textColor="#DB2777"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Signup Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Full Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#9D174D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:hint="Your full name"
                    android:textColor="#9D174D"
                    android:textColorHint="#F9A8D4"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp"/>

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#9D174D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:hint="your.email@example.com"
                    android:textColor="#9D174D"
                    android:textColorHint="#F9A8D4"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp"/>

                <!-- Username -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#9D174D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:hint="Choose a username"
                    android:textColor="#9D174D"
                    android:textColorHint="#F9A8D4"
                    android:inputType="text"
                    android:layout_marginBottom="16dp"/>

                <!-- Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#9D174D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:hint="Create a password"
                    android:textColor="#9D174D"
                    android:textColorHint="#F9A8D4"
                    android:inputType="textPassword"
                    android:layout_marginBottom="16dp"/>

                <!-- Confirm Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textColor="#9D174D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:hint="Confirm your password"
                    android:textColor="#9D174D"
                    android:textColorHint="#F9A8D4"
                    android:inputType="textPassword"
                    android:layout_marginBottom="24dp"/>

                <!-- Terms Checkbox -->
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I agree to Terms and Privacy Policy"
                    android:textColor="#9D174D"
                    android:buttonTint="#EC4899"
                    android:layout_marginBottom="24dp"/>

                <!-- Sign Up Button -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸŽ§ Create Account"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#EC4899"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="24dp"/>

                <!-- Login Prompt -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="#9D174D"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Login"
                        android:textColor="#EC4899"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>