<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF9FB">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F8E6E6"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← back"
            android:textColor="#9D174D"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Focus Timer"
            android:textSize="20sp"
            android:textColor="#9D174D"
            android:gravity="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout ⍈"
            android:textColor="#C71585"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Player Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chili Lofi Beats"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Vibes Collection"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="12sp"
                android:textColor="#888888" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:24"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Custom Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9D174D" />
        </LinearLayout>

        <!-- Player Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Previous Button -->
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="⏮"
                android:textSize="16sp"
                android:textColor="#9D174D"
                android:background="@drawable/round_button_bg"
                android:layout_margin="8dp" />

            <!-- Play Button -->
            <Button
                android:id="@+id/playButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="▶"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_button_accent_bg"
                android:layout_margin="8dp" />

            <!-- Next Button -->
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="⏭"
                android:textSize="16sp"
                android:textColor="#9D174D"
                android:background="@drawable/round_button_bg"
                android:layout_margin="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Playlist Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FAFAFA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Study Playlist"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:paddingLeft="12dp" />

        <!-- Playlist Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/playlist_item_bg"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_music_note" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chili Lofi Beats"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Vibes Collection"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32.4"
                android:textSize="12sp"
                android:textColor="#888888"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Playlist Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/playlist_item_bg"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_music_note" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Midnight Study"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lofi Disease"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="412"
                android:textSize="12sp"
                android:textColor="#888888"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>