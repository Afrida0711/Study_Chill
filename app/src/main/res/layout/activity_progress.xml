<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2D2BD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="18dp"
        android:elevation="4dp"
        android:layout_marginTop="35dp"
        android:clipToOutline="true">

        <!-- Header with Back + Title + Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                android:textStyle="bold"
                android:textColor="#C71585"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📈 Your Progress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#C71585" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout ⍈"
                android:textStyle="bold"
                android:textColor="#C71585"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Points & Sessions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/studyPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="127\nStudy Points"
                android:gravity="center"
                android:textColor="#8B1C62"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FFDDEE"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/sessionsToday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23\nSessions Today"
                android:gravity="center"
                android:textColor="#8B1C62"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FFDDEE"
                android:padding="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Study Streak -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEAF5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔥 Study Streak"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#C71585"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 days"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#8B1C62"
                android:gravity="end"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/progressStreak"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="70"
                android:max="100"
                android:progressTint="#C71585"
                android:backgroundTint="#FFDDEE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next: 🏆 10-day badge"
                android:textSize="12sp"
                android:textColor="#555555"
                android:gravity="center"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Leaderboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFDDEE"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏅 Leaderboard"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#8B1C62"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🥇 Alex (You) - 127 pts"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🥈 Sarah - 115 pts"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🥉 Mike - 98 pts"
                android:textSize="13sp"
                android:textColor="#333333" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
