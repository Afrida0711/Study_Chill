<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="16dp">

    <!-- Header with Back and Logout -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/navy"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Breathing Circle"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@color/navy"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Breathing Circle in the Center -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="70dp"
        android:layout_centerInParent="true">

        <View
            android:id="@+id/viewCircleOuter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.5"
            android:background="@drawable/circle_inner" />

        <View
            android:id="@+id/viewCircleInner"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_inner" />
    </FrameLayout>

    <!-- Breathing Instruction Text -->
    <TextView
        android:id="@+id/txtBreathe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleContainer"
        android:layout_centerHorizontal="true"
        android:text="Breathe In..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Participants Card -->
    <LinearLayout
        android:id="@+id/layoutParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBreathe"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/mint"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/txtParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● Live participants (13)"
            android:textSize="14sp"
            android:textColor="#C2185B" />

        <TextView
            android:id="@+id/txtNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Alex (You), Sarah, Mike, Emma, +9 more"
            android:textSize="14sp"
            android:textColor="#444444"/>
    </LinearLayout>

    <!-- Start Button (Centered at Bottom) -->
    <Button
        android:id="@+id/btnStartExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Start Breathing Exercise"
        android:textAllCaps="false"
        android:gravity="center"
        android:backgroundTint="@color/navy"
        android:textColor="#FFFFFF" />

</RelativeLayout>
